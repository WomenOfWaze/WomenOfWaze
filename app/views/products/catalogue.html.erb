<%= link_to 'Link to Enquiry form' %>
<table>
  <tr>
    <td style = "width:  500px;" valign="top">
      <div>
        <% for category in @categories %>
          <b><%= category.name %></b><br/><br/>
          <% for sub_category in category.sub_categories %>
            <div>
              <a href="#<%= sub_category.id %>"><%=  sub_category.name %></a>
              <br/>
            <%end%>
          </div>
        <%end%>
      </div>
    </td>
    <td  valign="top">
      <table style ="width: 500px;" border ="1">
        <% for category in @categories %>
          <% for sub_category in category.sub_categories %>
            <tr>
              <td colspan ="4">
                <a name="<%= sub_category.id %>"><i><%=  sub_category.name %></i></a>
              </td>
            </tr>
            <tr>
              <% for product in sub_category.products %>
                <td>
                  <%= image_tag product.photo.url,:width=>116,:height=>155 %><br/>
                  <%= product.name %><br/>
                  <% if product.is_new_arrival? %>
                    New Arrival! <br/>
                  <% end %>
                  <%=  label_tag 'pcode', "P Code: #{product.code}"%><br/>
                  <%=  label_tag 'cost', "Cost: Rs #{product.price}/-"%>

                  <%= link_to "Interested in buying", new_enquiry_url(:product_id => product.id) %>
                </td>
              <%end%>
            </tr>
          <%end%>
        <%end%>
      </table>

    </td>
  </tr>
  <br/>
</table>