    <title>WOW</title>
  </head>
  <body>
    <div class="wrapper container_24">
      <header class="banner">
        <span>An initiative of <a id="tcs_link" href="http://www.tcs.com/homepage/Pages/default.aspx" target="blank">TCS</a> Maitree to empower the women of waze.</span>
      </header>

      <section class="admincontent">
        <div class="admin-banner">
          <h3>Welcome Admin</h3>
        </div>
        <div class="center">
          <div class="admin-option">
            <%= form_for(@sub_category) do |f| %>
              <% if @sub_category.errors.any? %>
                <div id="error_explanation" class ="field_with_errors">
                  <h2><%= pluralize(@sub_category.errors.count, "error") %> prohibited this category from being saved:</h2>

                  <ul>
                    <% @sub_category.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
            <table>
              <tr>
                <td><%= f.label :name %></td>
                <td><%= f.text_field :name %></td>
              </tr>

              <tr>
                <td><%= f.label :description %></td>
                <td><%= f.text_area :description%></td>
              </tr>
              <% if @category %>
              <%= hidden_field_tag :category_id, @category.id %>
              <%end%>
              <tr>
                <td><%= link_to 'Back', sub_categories_path(:category_id => @sub_category.category_id ) %></td>
                <td><%= f.submit %></td>
              </tr>
              </table>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>
